<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/sound_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        tools:visibility="gone"
        tools:text="00:07"/>

    <Chronometer
        android:id="@+id/sound_recorder_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/sound_recorder_retry"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/sound_recorder_start"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/sound_recorder_play"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/sound_recorder_save"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


</FrameLayout>