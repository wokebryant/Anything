<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lf_dynamics_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/lf_bg_round_image"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/lf_bg_dynamics_online"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lf_dynamics_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    tools:text="Singer鹿"/>

                <TextView
                    android:id="@+id/lf_dynamics_gender_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/lf_dynamics_nick"
                    android:includeFontPadding="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/lf_dynamics_women"
                    android:drawablePadding="1dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="1dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="1dp"
                    android:background="@drawable/lf_bg_dynamics_tag"
                    tools:text="24"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/lf_dynamics_timestamp_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:textColor="#AAAAAA"
                android:textSize="11dp"
                tools:text="刚刚 · 1.2km"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/lf_dynamics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="14dp"
        android:textColor="#333333"
        android:textSize="14dp"
        tools:text="夏天真是充满恋爱的季节呢，天天吃狗粮！！"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lf_dynamics_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lf_dynamics_comment"/>

            <TextView
                android:id="@+id/lf_dynamics_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                android:textColor="#AAAAAA"
                android:textSize="12dp"
                tools:text="2351"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/lf_dynamics_praise_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lf_dynamics_praise_off"/>

            <TextView
                android:id="@+id/lf_dynamics_praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                android:textColor="#AAAAAA"
                android:textSize="12dp"
                tools:text="12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dynamics_tease"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lf_dynamics_tease_off"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:includeFontPadding="false"
               android:textColor="#AAAAAA"
               android:textSize="12dp"
               android:text="撩一下"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>