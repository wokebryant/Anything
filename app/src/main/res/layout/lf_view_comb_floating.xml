<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:clipChildren="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/comb_num_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comb_num_1"
            android:layout_width="21dp"
            android:layout_height="31dp"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            tools:src="@drawable/lf_combsend_1"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/comb_num_2"
            android:layout_width="21dp"
            android:layout_height="31dp"
            android:visibility="visible"
            tools:src="@drawable/lf_combsend_5"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/comb_num_3"
            android:layout_width="21dp"
            android:layout_height="31dp"
            android:visibility="gone"
            android:src="@drawable/lf_combsend_add" />

    </LinearLayout>

    <ImageView
        android:id="@+id/comb_effct_view"
        android:layout_width="172dp"
        android:layout_height="84dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-14dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        tools:visibility="visible"
        tools:src="@drawable/lf_combsend_rich3"/>

</LinearLayout>