<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //播放容器
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //大图轮播组件
        <com.wokebryant.anythingdemo.newerchannel.widget.PhotoFlipperView
            android:id="@+id/newer_channel_flipper_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
        //播放器组件
        <FrameLayout
            android:id="@+id/newer_channel_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:visibility="gone">

            <Button
                android:id="@+id/player_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="这是视频，点击切换到图片轮播"/>

        </FrameLayout>>
    </FrameLayout>

    //互动层组件
    <com.wokebryant.anythingdemo.newerchannel.widget.NewerChannelView
        android:id="@+id/newer_channel_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>